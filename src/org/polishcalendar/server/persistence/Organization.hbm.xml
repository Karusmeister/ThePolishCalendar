<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.polishcalendar.server.persistence">
    <class name="Organization" table="ORGANIZATIONS">
        <id name="id" column="ORGANIZATION_ID">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="followersNumber"/>
        <property name="description"/>
        <property type="date" name="creationDate"/>
        
        <set name="events" inverse="true">
        	<key column="ORGANIZATION_ID"/>
        	<one-to-many class="Event"/>
        </set> 
        
        <set name="followingUsers" table="ORGANIZATION_FOLLOWING">
        	<key column="ORGANIZATION_ID"/>
        	<many-to-many class="User" column="USER_ID"/>
        </set>               
    </class>
</hibernate-mapping>